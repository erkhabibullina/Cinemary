<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/trailer_ic_play"
        android:layout_width="@dimen/icon_small"
        android:layout_height="24dp"
        android:background="@drawable/ic_play_circle_outline"
        app:layout_constraintBottom_toBottomOf="@+id/trailer_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trailer_title"
        app:layout_constraintVertical_bias="0.58000004" />

    <TextView
        android:id="@+id/trailer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/trailer_ic_play"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tools_trailer" />

</androidx.constraintlayout.widget.ConstraintLayout>